<h1>All Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article),
          class: "article_title", id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>

<%= link_to "Create new Article", new_article_path, class: "new_article" if logged_in? %>
<%= link_to "<< Tags >>", tags_path %>

<div id="container">
  <div id="content">
   <hr>
   <h6>
     <% if logged_in? %>
       <%= "Logged in as #{current_user.email}" %>
       <%= link_to "(logout)", logout_path %>
       <br><%= link_to "Manage Users", users_path if current_user.username == "admin" %>
     <% else %>
       <%= link_to "Login", login_path %><br>
       <%= link_to "Create New Account", new_user_path %>
     <% end %>
   </h6>
 </div>
</div>
