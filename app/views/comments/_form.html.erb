<% if logged_in? %>
  <%= form_for [ @article, @comment ] do |f| %>
    <p>
      <%= current_user.username %>
    </p>
    <p>
      <%= f.label :body, "Comment" %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
<% else %>
  <%= link_to "Please login to comment", login_path %><br><br>
<% end %>
